<?xml version="1.0" encoding="UTF-8"?>
<changeSet id="002-create-voting-stats-table" author="copilot">
    <createTable tableName="voting_stats">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="absence_excuse" type="BOOLEAN">
            <constraints nullable="false"/>
        </column>
        <column name="date" type="DATE">
            <constraints nullable="false"/>
        </column>
        <column name="num_missed" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="num_votings" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="num_voted" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="sitting" type="INT">
            <constraints nullable="false"/>
        </column>
    </createTable>
</changeSet>
